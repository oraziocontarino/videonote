<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.audiorecording.AudioRecordingFragment"
    android:orientation="vertical">
    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/audioRecordStatusLabel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Audio record: " />
        <TextView
            android:id="@+id/audioRecordStatusValue"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Not running" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/audioRecordStartButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:clickable = "false"
            android:text="Start" />

        <Button
            android:id="@+id/audioRecordPauseButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:clickable = "false"
            android:text="Pause" />

        <Button
            android:id="@+id/audioRecordResumeButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:clickable = "false"
            android:text="Resume" />

        <Button
            android:id="@+id/audioRecordStopButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:clickable = "false"
            android:text="Stop" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/audioRecordTextInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textMultiLine"
            android:hint="Type note here..." />

        <Button
            android:id="@+id/audioRecordTextButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:text="Add" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/audioRecordFileInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="Chose a file" />
        <Button
            android:id="@+id/audioRecordFileButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:text="Browse" />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_weight="0"
        android:background="?android:attr/listDivider" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/audioRecordNoteContainer">
        </LinearLayout>
    </ScrollView>

</LinearLayout>